<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tz.co.neelansoft.millennium">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LibraryActivity" android:parentActivityName=".MainActivity" android:theme="@style/AppTheme" android:label="@string/library_title" android:launchMode="singleInstance"/>
        <activity android:name=".VodActivity" android:parentActivityName=".MainActivity" android:theme="@style/AppTheme" android:label="@string/title_vod"/>
        <activity android:name=".LiveActivity" android:parentActivityName=".MainActivity" android:theme="@style/AppTheme" android:label="@string/live_title"/>
        <activity android:name=".LoginActivity" android:theme="@style/AppTheme.FullScreen" android:label="@string/live_title"/>
        <activity android:name=".ProfileActivity" android:parentActivityName=".MainActivity" android:theme="@style/AppTheme" android:label="@string/profile_title"/>
    </application>

</manifest>